<script>
 document.addEventListener('DOMContentLoaded', () => {
  const searchIcon = document.getElementById('search-icon') as HTMLElement;
  const searchModal = document.getElementById('search-modal') as HTMLElement;
  const modalCloseBtn = document.getElementById('modal-close-btn') as HTMLElement;

  if (searchIcon && searchModal && modalCloseBtn) {
    searchIcon.addEventListener('click', (e) => {
      e.preventDefault();
      searchModal.classList.remove('hidden');
    });

    modalCloseBtn.addEventListener('click', () => {
      searchModal.classList.add('hidden');
    });

    // Optional: Close modal if clicking outside of it
    searchModal.addEventListener('click', (e) => {
      if (e.target === searchModal) {
        searchModal.classList.add('hidden');
      }
    });
  }
});

</script>


