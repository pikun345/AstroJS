---
const { AllTag } = Astro.props;
---

<div class="h-auto w-full m-5 bg-white p-5 rounded-lg">
    <div class="text-black text-3xl font-semibold">Tags</div>
    <div>
        {
            AllTag.flatMap((data) =>
                data.nodes.map((itm) => (
                    <span class=" p-1">
                        <button
                            type="button"
                            class="px-3 py-2 text-xs mr-2 mb-2 font-medium text-center inline-flex items-center text-white bg-blue-400 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                        >
                            {itm.name}
                            <span class="inline-flex items-center justify-center w-4 h-4 ms-2 text-xs font-semibold text-black bg-blue-200 rounded-full">
                                2
                            </span>
                        </button>
                    </span>
                )),
            )
        }
    </div>
</div>
