---
import '../../styles/zeta.css';
import Holding from '../Logo/Holding.astro';

---
<!-- md:flex -->

<div>
  <Holding text="Contact"/>


<div class=" flex justify-center items-center p-6 mb-32">
   

    <div class=" w-full rounded-lg p-8 md:flex">
      <!-- Left section -->
      <div class="md:w-1/2 mb-6 md:mb-0 mr-16">
        <h2 class="text-3xl font-bold mb-4 text-black">Come Say Hi</h2>
        <p class="text-gray-800 mb-6">Website owner..? Enthusiast Netizen..? We welcome everyone for a nerdy chitchat. If you have any questions, suggestions, or POVs then feel free to hit us up in the comment box.</p>
        <ul class="list-disc pl-4 text-gray-600">
          <li>support@zetamatic.com</li>
          <li>support+queries@zetamatic.com</li>
        </ul>
      </div>
  
      <!-- Right section (Form) -->
      <div class="md:w-1/2">
        <form class="space-y-4">
          <!-- Name & Email Fields -->
          <div class="flex gap-4">
            <div class="w-1/2">
              <label for="firstName" class="block text-sm font-medium text-gray-700">First Name *</label>
              <input type="text" id="firstName" class="mt-1 text-black block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required />
            </div>
            <div class="w-1/2">
              <label for="lastName" class="block text-sm font-medium text-gray-700">Last Name *</label>
              <input type="text" id="lastName" class="mt-1 text-black block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required />
            </div>
          </div>
  
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email Address *</label>
            <input type="email" id="email" class="mt-1 text-black block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required />
          </div>
  
          <!-- Query Type -->
          <div>
            <label for="queryType" class="block text-sm font-medium text-gray-700">Type of Query *</label>
            <select id="queryType" class="mt-1 text-black block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
              <option>Please choose an option</option>
              <option>General Inquiry</option>
              <option>Support</option>
              <option>Feedback</option>
            </select>
          </div>
  
          <!-- Subject -->
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700">Subject *</label>
            <input type="text" id="subject" class="mt-1 text-black block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required />
          </div>
  
          <!-- Comments/Questions -->
          <div>
            <label for="comments" class="block text-sm font-medium text-gray-700">Comments / Questions *</label>
            <textarea id="comments" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-black" rows="4"required></textarea>
          </div>
  
         
  
          <!-- Submit Button -->
          <div>
            <button type="submit" class="w-full py-2 px-4 bg-purple-600 text-white font-bold rounded-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
              Send
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
