---
import '../../styles/zeta.css';
const {data}=Astro.props;
console.log("nugun",data);
---
<div class="relative flex items-center justify-center">
  <!-- Image Section -->
  <div class="z-10">
    <img src={data.img || "https://st4.depositphotos.com/14953852/24787/v/450/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg"}  
         alt="img1" 
         height="800" 
         width="1100" 
         class="relative z-10">
  </div>

  <!-- Text Section Overlapping Image -->
  <div class="absolute -bottom-32 left-0 ml-96 z-20">
    <!-- Navigation Links -->
    <div>
      <ul class="flex flex-row">
        <div class="bg-gray-500 bg-opacity-50 mr-2 h-10 hover:bg-blue-700 hover:bg-opacity-80 transition-colors duration-300">
          <li class="m-2 bg-opacity-50 text-white font-semibold">
            <a href="/zetaDynPg/blog_fol/content/lists/ecom">{data.list || 'Ecommerce'}</a>
          </li>
        </div>
        <div class="bg-gray-500 bg-opacity-50 mr-2 h-10 hover:bg-blue-700 hover:bg-opacity-80 transition-colors duration-300">
          <li class="m-2 bg-opacity-50 text-white font-semibold">
            <a href="/zetaDynPg/blog_fol/content/lists/wooComm">{data.list || 'WooCommerce'}</a>
          </li>
        </div>
        <div class="bg-gray-500 bg-opacity-50 mr-2 h-10 hover:bg-blue-700 hover:bg-opacity-80 transition-colors duration-300">
          <li class="m-2 bg-opacity-50 text-white font-semibold">
            <a href="/zetaDynPg/blog_fol/content/lists/wordPress">{data.list || 'WordPress'}</a>
          </li>
        </div>
      </ul>
    </div>

    <!-- Title Section -->
    <div class="text-blue-600 font-bold w-3/4" style="max-width: 800px;">
      <div class="relative">
        <span class="block text-4xl font-bold leading-tight break-words bg-green-400 mt-2 p-4 text-center w-full" style="max-width: 75%;">
          {data.title || 'Default Title'}
        </span>
      </div>

      <!-- Author and Date Info -->
      <div class="mb-3 mt-3 text-blue-600">
        <div class="flex items-center space-x-4 flex-row">
          <div class="mb-5">
            <a href="">
              <img src={data.author.node.avatar.url} alt="profile pic" class="rounded-full" height="30" width="30">
            </a>
          </div>
          <div class="flex flex-row">
            <div class="flex items-center text-sm text-gray-600 space-x-1 mb-5">
              <span>BY</span>
              <span class="font-bold hover:text-gray-500 text-black">{data.author.name || 'Author Name'}</span>
              <span>â€¢</span>
              <span>{data.date || 'DECEMBER 13, 2022'}</span>
              <span>{data.time || '7 min read'}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
