import '../styles/zeta.css';
const {data}=Astro.props;

---
<div class="relative flex flex-col justify-center items-center">
    {data.featuredImage ?(
         <div class="z-10">
        <img src={data.featuredImage.node.sourceUrl}
             alt="img1" 
             height="800" 
             width="1200" 
             class="relative mt-7 z-10 rounded-lg">
      </div>  
    ):(<div class="z-10">
        <img src={"https://st4.depositphotos.com/14953852/24787/v/450/depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpg"}  
