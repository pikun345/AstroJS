<script>
    import { any } from "astro:schema";
    
                // Carousel functionality
                const items :any= document.querySelectorAll('[data-carousel-item]');
                const indicators:any = document.querySelectorAll('[data-carousel-slide-to]');
                let activeIndex = 0;
        
                // Function to update carousel
                function updateCarousel(newIndex) {
                    items[activeIndex].classList.remove('active');
                    indicators[activeIndex].classList.remove('bg-white');
                    indicators[activeIndex].classList.add('bg-white/50');
        
                    activeIndex = newIndex;
        
                    items[activeIndex].classList.add('active');
                    indicators[activeIndex].classList.add('bg-white');
                    indicators[activeIndex].classList.remove('bg-white/50');
                }
        
                // Indicators click
                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => {
                        updateCarousel(index);
                    });
                });
                const nxt:any= document.querySelector('[data-carousel-next]')
                // Next button
               nxt.addEventListener('click', () => {
                    const newIndex = (activeIndex + 1) % items.length;
                    updateCarousel(newIndex);
                });
        const prvs:any=document.querySelector('[data-carousel-prev]')
                // Previous button
                prvs.addEventListener('click', () => {
                    const newIndex = (activeIndex - 1 + items.length) % items.length;
                    updateCarousel(newIndex);
                });
            </script>
              