---
import MainLayout from '../layouts/zeta_layout.astro';
import '../styles/zeta.css';
import Card1 from '../components/card1.astro';
import Img from '../components/img.astro';
import Cmp from '../components/comp_lgo.astro';
import WorldImg from '../components/worldImg.astro';
import Card2 from '../components/card2.astro';
import Doc from '../components/doc.astro';

const home='';

const pages = [
  
  {
    index:'doc',
    content:'doc1'
  },
  {
    index:undefined,
    content:'home'
  }
];

const { index } = Astro.params;
let page = pages.find((page) => page.index === index);

if (!page) {
  // Try to find if it's a subpage
  page = pages[0]; // Home page by default
}

const { content } = page;

console.log("index")
console.log("cmn=",content)

---

<MainLayout>
  <!-- to home -->
  <a href={home}></a>

   <div>
    
  
   

    <!-- If nested content (doc or blog) exists, render it -->
    {content === 'doc1' && <div><Doc/></div>}

     {content ==='home' && 
     <div class="container mx-auto"> 
       <Card1 />
      <Img />
      <Cmp />
      <WorldImg />
      <Card2 />
       </div> 
      }


  </div>
</MainLayout>
